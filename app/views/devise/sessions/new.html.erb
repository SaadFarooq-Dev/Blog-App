<div class="User-Authentication form-signin m-auto">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-outline">
      <%= f.label :email,class:"form-label" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",required: true %>
    </div>
    <div class="field">
      <%= f.label :password,class:"form-label" %><br>
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control",required: true %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field ">
        <%= f.check_box :remember_me,class:"form-check-input" %>
        <%= f.label :remember_me,class:"form-check-label" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in" ,class:"btn btn-dark w-100 field" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
